<Window x:Class="WpfApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Label Content="LOGIN" HorizontalAlignment="Left" Margin="341,32,0,0" VerticalAlignment="Top" FontSize="40px" />
        <Label Content="Username" HorizontalAlignment="Left" Margin="284,134,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.69,0.564" FontSize="20px"/>
        <TextBox HorizontalAlignment="Left" Margin="400,143,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="txtUsername"    />
        <Label Content="Password" HorizontalAlignment="Left" Margin="289,187,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.69,0.564" FontSize="20px"/>
        <Button Content="LOGIN" HorizontalAlignment="Left" Margin="383,279,0,0" VerticalAlignment="Top" Name="btnLogin"    Background="LightBlue" Foreground="DarkBlue" Click="btnLogin_Click" FontSize="20px" Width="68" Height="40"/>
        <PasswordBox HorizontalAlignment="Left" Margin="402,196,0,0" VerticalAlignment="Top" Width="120" PasswordChar="*" Name="txtPassword"  />

    </Grid>
</Window>
